
<div class="article">
  <div class="row">
    <div class="col-md-3">
      <div class="img-container m-1 p-1">
        <img alt="article-image" width="300" height="250" src={{img}} />
      </div>
    </div>
    <div class="col-md-8 ml-5">
      <div class="content m-1 p-1">        
        <a target="_blank" href="{{link}}" class="headline">{{headline}}</a>        
        <p>{{summary}}</p>
      </div>
      {{#if saved}}
        <a href="/delete/{{this._id}}" id="deleteButton"><button type="button" class="btn btn-danger">Delete Article</button></a>
        <button type="button" data-toggle="modal" data-value="{{this._id}}" data-target="comments-modal" class="btn btn-info ml-2 commentBtn" >Add Comments</button>                
      {{else}}
        <a href="/save/{{this._id}}"><button type="button" class="btn btn-primary">Save Article</button></a>
      {{/if}}
    </div>    
  </div>
</div>


