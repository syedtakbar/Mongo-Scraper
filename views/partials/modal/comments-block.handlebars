<div id="comments-modal" class="modal"  tabindex="-1" role="dialog"> 
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="commentModalLabel"></h5>                
            </div>
            <div id="commentsList">
                <ul id="commentsBody"></ul>
            </div>            
            <div class="modal-body">
                <div class="form-group">
                    <label for="exampleTextarea">Enter Comments:</label>                    
                    <textarea class="form-control" id="commentsText" rows="3"></textarea>
                </div>                
            </div>
            <div class="modal-footer">
                <button type="button" id="closeCommentsButton" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="saveCommentsButton" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

